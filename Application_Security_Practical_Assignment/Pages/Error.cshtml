@page
@model ErrorModel
@{
    ViewData["Title"] = "Something went wrong";
}

<div class="container py-5">
    <div class="card shadow-sm">
        <div class="card-body p-4">
            <h2 class="mb-2">Oops — something went wrong</h2>
            <p class="text-muted mb-4">
                An unexpected error occurred. Please try again later.
            </p>

            @if (Model.ShowRequestId)
            {
                <p class="text-muted small">
                    Reference ID: <code>@Model.RequestId</code>
                </p>
            }

            <div class="d-flex gap-2 mt-4">
                <a class="btn btn-primary" asp-page="/Index">Go Home</a>
                <a class="btn btn-outline-secondary" asp-page="/Account/Login">Login</a>
            </div>
        </div>
    </div>
</div>
