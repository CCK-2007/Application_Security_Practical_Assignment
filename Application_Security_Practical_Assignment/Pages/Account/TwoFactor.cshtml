@page
@model Application_Security_Practical_Assignment.Pages.Account.TwoFactorModel
@{
    ViewData["Title"] = "Two-Factor Verification";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-12 col-md-6 col-lg-5">
            <div class="card shadow-sm">
                <div class="card-body p-4">
                    <h2 class="mb-2">Verify your login</h2>
                    <p class="text-muted">A verification code was sent to your email.</p>

                    <form method="post" novalidate>
                        @Html.AntiForgeryToken()
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="mb-3">
                            <label asp-for="Input.Code" class="form-label">Verification code</label>
                            <input asp-for="Input.Code" class="form-control" autocomplete="one-time-code" />
                            <span asp-validation-for="Input.Code" class="text-danger small"></span>
                        </div>

                        <div class="form-check mb-3">
                            <input asp-for="RememberMachine" class="form-check-input" />
                            <label asp-for="RememberMachine" class="form-check-label">
                                Remember this device
                            </label>
                        </div>

                        <button class="btn btn-primary w-100" type="submit">Verify</button>
                    </form>

                    <div class="mt-3">
                        <a asp-page="/Account/Login">Back to login</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
