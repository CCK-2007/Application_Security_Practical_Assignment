@page
@model Application_Security_Practical_Assignment.Pages.Account.RegisterModel
@inject IConfiguration Configuration
@{
    ViewData["Title"] = "Register";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-12 col-md-8 col-lg-6">

            <div class="card shadow-sm">
                <div class="card-body p-4">
                    <h2 class="mb-1">Membership Registration</h2>
                    <p class="text-muted mb-4">Create your Bookworms Online membership account.</p>

                    <form method="post" enctype="multipart/form-data" novalidate>
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="RecaptchaToken" id="RecaptchaToken" />

                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <!-- Names -->
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label asp-for="Input.FirstName" class="form-label"></label>
                                <input asp-for="Input.FirstName" class="form-control" placeholder="e.g., Alex" />
                                <span asp-validation-for="Input.FirstName" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="Input.LastName" class="form-label"></label>
                                <input asp-for="Input.LastName" class="form-control" placeholder="e.g., Tan" />
                                <span asp-validation-for="Input.LastName" class="text-danger small"></span>
                            </div>
                        </div>

                        <hr class="my-4" />

                        <!-- Email -->
                        <div class="mb-3">
                            <label asp-for="Input.Email" class="form-label"></label>
                            <input asp-for="Input.Email" class="form-control" placeholder="e.g., alex.tan@gmail.com" autocomplete="email" />
                            <span asp-validation-for="Input.Email" class="text-danger small"></span>
                            <div class="form-text">
                                We will enforce email OTP (2FA) during login.
                            </div>
                        </div>

                        <!-- Mobile -->
                        <div class="mb-3">
                            <label asp-for="Input.MobileNo" class="form-label"></label>
                            <input asp-for="Input.MobileNo"
                                   class="form-control"
                                   placeholder="8-digit mobile number (e.g., 91234567)"
                                   inputmode="numeric"
                                   autocomplete="tel"
                                   maxlength="8"
                                   pattern="\d{8}"
                                   oninput="this.value = this.value.replace(/[^0-9]/g,'');"
                                   onpaste="setTimeout(() => { this.value = this.value.replace(/[^0-9]/g,''); }, 0);" />
                            <div class="form-text">Must be exactly 8 digits (numbers only).</div>
                            <span asp-validation-for="Input.MobileNo" class="text-danger small"></span>
                        </div>


                        <hr class="my-4" />

                        <!-- Addresses -->
                        <div class="mb-3">
                            <label asp-for="Input.BillingAddress" class="form-label"></label>
                            <input asp-for="Input.BillingAddress" class="form-control"
                                   placeholder="e.g., 123 Orchard Road, #05-12, Singapore 238888" />
                            <span asp-validation-for="Input.BillingAddress" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Input.ShippingAddress" class="form-label"></label>
                            <input asp-for="Input.ShippingAddress" class="form-control"
                                   placeholder="e.g., 45 Bukit Timah Rd, Block A #10-03, S'pore (Near MRT!)" />
                            <div class="form-text">Special characters are allowed.</div>
                            <span asp-validation-for="Input.ShippingAddress" class="text-danger small"></span>
                        </div>

                        <hr class="my-4" />

                        <!-- Payment -->
                        <div class="mb-3">
                            <label asp-for="Input.CreditCardNo" class="form-label"></label>
                            <input asp-for="Input.CreditCardNo"
                                   class="form-control"
                                   inputmode="numeric"
                                   maxlength="16"
                                   pattern="\d{12,16}"
                                   placeholder="e.g. 4111111111111111"
                                   oninput="this.value = this.value.replace(/[^0-9]/g, '')" />
                            <div class="form-text">Your card number will be encrypted before storing in the database.</div>
                            <span asp-validation-for="Input.CreditCardNo" class="text-danger small"></span>
                        </div>

                        <hr class="my-4" />

                        <!-- Password -->
                        <div class="mb-3">
                            <label asp-for="Input.Password" class="form-label"></label>
                            <input asp-for="Input.Password" class="form-control" autocomplete="new-password" />
                            <div class="form-text">
                                Minimum 12 characters and include uppercase, lowercase, number, and special character.
                            </div>
                            <span asp-validation-for="Input.Password" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Input.ConfirmPassword" class="form-label"></label>
                            <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" />
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger small"></span>
                        </div>

                        <hr class="my-4" />

                        <!-- Photo -->
                        <div class="mb-3">
                            <label asp-for="Input.Photo" class="form-label">Photo (.JPG only)</label>
                            <input asp-for="Input.Photo" class="form-control" type="file" accept=".jpg,.jpeg,image/jpeg" />
                            <div class="form-text">JPEG only, max 2MB.</div>
                            <span asp-validation-for="Input.Photo" class="text-danger small"></span>
                        </div>

                        <div class="d-grid gap-2 mt-4">
                            <button type="submit" class="btn btn-primary btn-lg">
                                Register
                            </button>
                            <a class="btn btn-outline-secondary" asp-page="/Account/Login">
                                Back to Login
                            </a>
                        </div>

                    </form>
                </div>
            </div>

            <p class="text-center text-muted small mt-3 mb-0">
                By registering, you agree to store your details securely for membership purposes.
            </p>

        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script src="https://www.google.com/recaptcha/api.js?render=@Configuration["Recaptcha:SiteKey"]"></script>
    <script>
        grecaptcha.ready(function () {
            grecaptcha.execute('@Configuration["Recaptcha:SiteKey"]', { action: 'register' })
                .then(function (token) {
                    var t = document.getElementById('RecaptchaToken');
                    if (t) t.value = token;
                });
        });
    </script>
}
