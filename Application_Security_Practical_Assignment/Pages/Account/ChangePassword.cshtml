@page
@model Application_Security_Practical_Assignment.Pages.Account.ChangePasswordModel
@{
    ViewData["Title"] = "Change Password";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-12 col-md-6 col-lg-5">
            <div class="card shadow-sm">
                <div class="card-body p-4">
                    <h2 class="mb-2">Change Password</h2>

                    @* Optional message (e.g., after redirect) *@
                    @if (TempData["Msg"] != null)
                    {
                        <div class="alert alert-info">@TempData["Msg"]</div>
                    }

                    <form method="post" novalidate autocomplete="off">
                        @Html.AntiForgeryToken()

                        @* Ensure handler receives reason on POST *@
                        <input type="hidden" name="reason" value="@Model.Reason" />

                        @* Keep email posted back for expired flow *@
                        <input type="hidden" asp-for="Input.Email" />

                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        @if (Model.Reason == "expired")
                        {
                            <div class="alert alert-warning">
                                Your password has expired. Please change it now to continue.
                            </div>

                            <div class="mb-3">
                                <label class="form-label">Email</label>
                                <input class="form-control" value="@Model.Input.Email" readonly />
                                <div class="form-text">This is the email you attempted to log in with.</div>
                            </div>
                        }

                        @* Hidden dummy field to reduce aggressive autofill in some browsers *@
                        <input type="text" name="fakeusernameremembered" autocomplete="username" style="display:none" />
                        <input type="password" name="fakepasswordremembered" autocomplete="current-password" style="display:none" />

                        <div class="mb-3">
                            <label asp-for="Input.CurrentPassword" class="form-label"></label>
                            <input asp-for="Input.CurrentPassword"
                                   class="form-control"
                                   type="password"
                                   autocomplete="current-password"
                                   autocorrect="off"
                                   autocapitalize="off"
                                   spellcheck="false" />
                            <span asp-validation-for="Input.CurrentPassword" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Input.NewPassword" class="form-label"></label>

                            <input asp-for="Input.NewPassword"
                                   id="newPasswordInput"
                                   class="form-control"
                                   type="password"
                                   autocomplete="new-password"
                                   autocorrect="off"
                                   autocapitalize="off"
                                   spellcheck="false" />

                            <div class="form-text">
                                Minimum 12 characters with uppercase, lowercase, number, and symbol.
                            </div>

                            <!-- Strength bar -->
                            <div class="mt-2">
                                <div class="progress" style="height:8px;">
                                    <div id="pwBar" class="progress-bar" style="width:0%"></div>
                                </div>
                                <small id="pwStrengthText" class="fw-semibold"></small>
                            </div>

                            <!-- Live checklist -->
                            <ul class="small mt-2 mb-0 ps-3">
                                <li id="cLen">At least 12 characters</li>
                                <li id="cUpper">Uppercase letter (A-Z)</li>
                                <li id="cLower">Lowercase letter (a-z)</li>
                                <li id="cNum">Number (0-9)</li>
                                <li id="cSpec">Special character (!@@#$...)</li>
                            </ul>

                            <span asp-validation-for="Input.NewPassword" class="text-danger small"></span>
                        </div>


                        <div class="mb-3">
                            <label asp-for="Input.ConfirmPassword" class="form-label"></label>
                            <input asp-for="Input.ConfirmPassword"
                                   class="form-control"
                                   type="password"
                                   autocomplete="new-password"
                                   autocorrect="off"
                                   autocapitalize="off"
                                   spellcheck="false" />
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger small"></span>
                        </div>

                        <button class="btn btn-primary w-100" type="submit">
                            Update Password
                        </button>

                        @if (User?.Identity?.IsAuthenticated == true)
                        {
                            <a class="btn btn-link w-100 mt-2" asp-page="/Index">Back to Home</a>
                        }
                        else
                        {
                            <a class="btn btn-link w-100 mt-2" asp-page="/Account/Login">Back to Login</a>
                        }

                    </form>

                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        const pw = document.getElementById("newPasswordInput");
        const bar = document.getElementById("pwBar");
        const text = document.getElementById("pwStrengthText");

        const rules = {
            len: document.getElementById("cLen"),
            upper: document.getElementById("cUpper"),
            lower: document.getElementById("cLower"),
            num: document.getElementById("cNum"),
            spec: document.getElementById("cSpec")
        };

        function setValid(el, ok) {
            el.style.color = ok ? "green" : "red";
            el.style.textDecoration = ok ? "none" : "line-through";
        }

        pw.addEventListener("input", () => {
            const v = pw.value;

            const hasLen = v.length >= 12;
            const hasUpper = /[A-Z]/.test(v);
            const hasLower = /[a-z]/.test(v);
            const hasNum = /\d/.test(v);
            const hasSpec = /[^A-Za-z0-9]/.test(v);

            setValid(rules.len, hasLen);
            setValid(rules.upper, hasUpper);
            setValid(rules.lower, hasLower);
            setValid(rules.num, hasNum);
            setValid(rules.spec, hasSpec);

            let score = [hasLen, hasUpper, hasLower, hasNum, hasSpec].filter(Boolean).length;

            const labels = ["Very Weak", "Weak", "Medium", "Strong", "Very Strong"];
            const widths = [20, 40, 60, 80, 100];
            const colors = ["bg-danger", "bg-warning", "bg-info", "bg-primary", "bg-success"];

            if (v.length === 0) {
                bar.style.width = "0%";
                bar.className = "progress-bar";
                text.textContent = "";
                return;
            }

            bar.style.width = widths[score - 1] + "%";
            bar.className = "progress-bar " + colors[score - 1];
            text.textContent = labels[score - 1];
        });
    </script>
}

